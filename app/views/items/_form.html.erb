<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price, value: number_with_precision(f.object.price, precision: 2) %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="field">
      <%= f.label :category_id %><br>
      <%= f.select :category_id, options_for_select([["Appetizers", 1], "Entrees", "Desserts", "Drinks", "Sides"]), :include_blank=> true %><br>
    </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
