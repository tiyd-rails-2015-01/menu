<article class="type-system-geometric">
<p class="type"></p>
<h1>Big Cheese</h1>
</article>

<div class="cards">
  <div class="card">
    <div class="card-image">
      <img src="http://www.the-girl-who-ate-everything.com/wp-content/uploads/2012/12/creamy-spinach-artichoke-dip.jpg" alt="">
    </div>
    <div class="card-header">
      Appetizers
    </div>
    <div class="card-copy">
      <ol>
        <% @app_items.each do |item| %>
        <li><%= link_to "#{item.name}", edit_item_path(item) %>
          <%= item.price %>
        </li>
        <% end %>
      </ol>
    </div>
  </div>

  <div class="card">
    <div class="card-image">
      <img src="http://images.media-allrecipes.com/userphotos/250x250/00/07/41/74143.jpg" alt="">
    </div>
    <div class="card-header">
      Entrees
    </div>
    <div class="card-copy">
      <ol>
        <% @entree_items.each do |item| %>
        <li><%= link_to "#{item.name}", edit_item_path(item) %>
          <%= item.price %>
        </li>
        <% end %>
      </ol>
    </div>
  </div>

  <div class="card">
    <div class="card-image">
      <img src="http://images5.fanpop.com/image/photos/29400000/Strawberry-Cheesecake-cheesecake-29497907-323-222.jpg" alt="">
    </div>
    <div class="card-header">
      Desserts
    </div>
    <div class="card-copy">
      <ol>
        <% @special_items.each do |item| %>
        <li><%= link_to "#{item.name}", edit_item_path(item) %>
          <%= item.price %>
        </li>
        <% end %>
      </ol>
    </div>
  </div>
</div>

