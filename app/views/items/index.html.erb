<h1>Cookiesplosion</h1>

<div class="texture">
  <div class="texture-inverted">
    <section>
      <table>
        <tbody>
          <% @number_of_categories.times do |i| %>
          <tr id="section_header">
              <td><aside><%= Category.get_description_at_key( i+1 ) %></aside></td>
              <td> <%= image_tag Category.get_image_at_key( i+1 ) %></td>
          </tr>
            <% @items.each do |item| %>
              <% if item.category_key == (i+1) %>
                <tr>
                    <td><%= link_to item.name, edit_item_path(item) %></td>
                    <td><%= item.description %></td>
                    <td>$<%= item.price %></td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </section>
  </div>
</div>

