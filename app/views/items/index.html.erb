<h1>Selections from the house</h1>

  <table>
  <thead>
    <tr>
      <th>Course name</th>
      <th>Item name</th>
      <th>Item Price</th>
      <th>Item Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.course.name %> <%= link_to image_tag(item.course.image), edit_item_path(item) %> </td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= item.description %></td>
        <td><%= button_to 'Show', edit_item_path(item), :method => "get" %></td>
        <td><%= button_to 'Edit', edit_item_path(item), :method => "get" %></td>
        <td><%= button_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :method => "get" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

