<h2>Items</h2>

<table>
  <thead>
    <tr>
      <th>Category Name</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.category_name %> </td>
      <td><%= item.name %> </td>
      <td><%= item.description %> </td>
      <td><%= item.price %> </td>
      <td><%= link_to '<button type="button">Edit</button>' .html_safe, edit_item_path(item) %></td>
    <% end %>
  </tbody>
</table>


<td><%= link_to '<button type="button">New</button>' .html_safe, new_item_path %></td>
