
<nav class="fixed-nav-bar">
  <div class="nav">
    <span id="home">Menu</span>
  </div>
</nav>

<div class="inner-div">
<p id="notice"><%= notice %></p>
<p>&nbsp;</p>
<p>&nbsp;</p>
<h2>Menu Items</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Course ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %> </td>
        <td><%= item.description %>  </td>
        <td><%= item.price %> </td>
        <td><%= item.course_id %> </td>
        <td><%= link_to '<button type="button">Edit</button>' .html_safe, edit_item_path(item) %></td>
        <td><%= link_to '<button type="button">Destroy</button>' .html_safe, item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to '<button type="button">Course Home</button>' .html_safe, root_path %>
</div>
