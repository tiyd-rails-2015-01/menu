<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th>Category </th>
      <th>Name </th>
      <th>Description </th>
      <th>Price </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.category.name %></td>
        <td><%= food.name %></td>
        <td><%= food.description %></td>
        <td><%= food.price %></td>
        <td><%= link_to 'Edit', edit_food_path(food) %></td>
        <td><%= link_to 'Remove Item', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
  <%= link_to 'New food', new_food_path %>
  <%= link_to 'Home', root_path %>
</p>
