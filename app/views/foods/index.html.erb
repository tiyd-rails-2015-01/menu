<p id="notice"><%= notice %></p>

<h1>Menu</h1>


<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @foods.each do |food| %>
    <tr>
      <td><%= food.category.name %></td>
      <td><%= food.name %></td>
      <td><%= food.description %></td>
      <td><%= food.price %></td>
      <td><%= link_to 'Edit', edit_food_path(food) %></td>
      <td><%= link_to 'Destroy', food, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<button><%= link_to 'New Food', new_food_path %></button>
