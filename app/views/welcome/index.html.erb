
<div class="side-image">
  <div class="images-wrapper"></div>
  <div class="side-image-content">
    <h1>The Frolicking Goat Cafe</h1>
      <button><%= link_to 'Create new menu item', new_item_path %></button>
    </div>
  </div>
<article class="type-system-rounded">

  <% if @sections.length != nil %>
    <ul class="accordion-tabs-minimal">
      <% first = true %>
      <% @sections.each do |section| %>
        <li class="tab-header-and-content">
        <a href="#" class="tab-link <%= first ? 'is-active' : ''%>"><%=section.name%></a>
        <% first = false %>
        <div class="tab-content">
          <div class="grid-items-lines">
            <a class="grid-item">
              <%= image_tag section.picture %>
            </a>
              <table class="grid-item grid-item-big">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @items.each do |item| %>
                  <% if item.section == section %>
                  <tr>
                    <td><%= link_to item.name, edit_item_path(item.id) %></td>
                    <td><%= item.description %></td>
                    <td><%= number_to_currency(item.price) %></td>
                  </tr>
                  <% end %>
                  <% end %>
                </tbody>
              </table>
              <% end %>
              <% end %>
            </a>
            <div class="right-cover"></div>
            <div class="bottom-cover"></div>
          </div>
      </div>
    </li>
  </ul>

</article>
